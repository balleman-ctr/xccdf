        <platform idref="cpe:/o:microsoft:windows_11" selector="windows_11"/>        
        <check system="http://oval.mitre.org/XMLSchema/oval-definitions-5" selector="windows_10">
            <check-content-ref name="oval:example:def:3934" href="oval.xml"/>
        </check>
        <check system="http://oval.mitre.org/XMLSchema/oval-definitions-5" selector="windows_11">
            <check-content-ref name="oval:example:def:3935" href="oval.xml"/>
        </check>
	</Rule>
